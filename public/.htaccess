<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect www to non-www (اختياري)
    RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

    # إعادة كتابة طلبات HTTP إلى HTTPS (اختياري)
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # مسارات Laravel المفضلة
    RewriteRule ^(.*)$ index.php [L]

    # منع الوصول إلى الملفات الحساسة والمجلدات
    RewriteRule ^(.env|\.git|\.gitignore|\.htaccess|\.composer) - [F,L]

    # إذا كانت ملف صورة أو ملف ثابت، نسمح بالوصول المباشر
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [L]
</IfModule>
